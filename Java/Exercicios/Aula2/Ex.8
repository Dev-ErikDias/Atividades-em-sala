public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		float p = 0;
		float imp = 0;
		int n = 1;
		while(n != 0){
			System.out.print("Informe um numero: ");
			String lido = input.nextLine();
			n = Integer.parseInt(lido);
			if(n % 2 == 0) {
				p+= n;
			}else {
				imp+= n;
			}
		}
		System.out.println("A soma dos numeros impares informados foi: " + imp);
		System.out.println("A soma dos numeros pares informados foi: " + p);
	}
