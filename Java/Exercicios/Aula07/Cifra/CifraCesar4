package modelo;

public class CifraCesar4 extends CifraCesar {
	
	private Integer chave = 4;
	
	//MÃ©todos
	public String criptografar(String texto) {
		String retorno = "";
		
		for(int i = 0; i< texto.length();i++) {
			char letra = texto.charAt(i);
			Integer indice = this.alfabeto.indexOf(letra);
			
			if(indice == -1) {
				retorno += letra;
			}
			int Lp = indice + chave;
			
			if(Lp > alfabeto.length()) {
				int dif = Lp - alfabeto.length();
				
				char letraCrip = alfabeto.charAt(dif);
				retorno += letraCrip;
			}else if (Lp < alfabeto.length() && indice >= 0){
				char letraCrip = alfabeto.charAt(Lp);
				retorno += letraCrip;
			}
		}
		
		return retorno;
	}
	
	public String descriptografar(String texto) {
		String retorno = "";
		
		for(int i = 0; i< texto.length();i++) {
			char letra = texto.charAt(i);
			Integer indice = this.alfabeto.indexOf(letra);
			int Lp = indice - chave;
			
			if(indice == -1) {
				retorno += letra;
			}else {				
				if(Lp < 0) {
					int dif = alfabeto.length() + Lp;
					
					char letraCrip = alfabeto.charAt(dif);
					retorno += letraCrip;
				}else if (Lp >= 0){
					char letraCrip = alfabeto.charAt(Lp);
					retorno += letraCrip;
				}
			}
			
		}
		
		return retorno;
	}

	public Integer getChave() {
		return chave;
	}

	public void setChave(Integer chave) {
		this.chave = chave;
	}
	
	
	

}
